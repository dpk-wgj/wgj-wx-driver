@import '../../styles/driver.wxss';
@import '../../styles/didi-ft.wxss';

.total-driver{
  border-bottom: none;
}

.driver-detailed .detailed-name{
  margin: 10px 0;
}

.invoice{
    float: right;
}

.main{
    border-top: 1px solid #f5f5f5;
    height: 230rpx;
    width: 100%;
    /* background: red; */
    margin-top: 195rpx;
    text-align: center;
}
.main .main-txt{
  font-size: 60rpx;
}
.main .obvious{
  width: 100%;
  text-align: center;
}
.evaluation-name{
    margin-top: 40rpx;
    color: #666666;
}
.evaluation-stars{
    width: 400rpx;
    display: flex;
    justify-content: space-around;
    margin-left: 150rpx;
    margin-top: 10rpx;
}
.stars-solid{
    padding-right: 10rpx;
    color:#ffd936;
    font-size: 50rpx;
}
.stars-empty{
    color:#ffd936;
    padding-right: 10rpx;
    font-size: 50rpx;
}

.toIndex{
    position: absolute;
    height: 88rpx;
    width: 100%;
    bottom: 0;
    display: flex;
    align-items: center;
    color: rgb(255, 255, 255);
    background: #fd7b30;
    margin-right: 20rpx;
    margin-top: 260rpx;
    box-shadow:3px 5px 10px #e0e0e0; 
    box-sizing: border-box
}
.toIndex .text{
    width: 100%;
    text-align: center;
}
