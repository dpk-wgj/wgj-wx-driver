page{
  width: 100%;
  height: 100vh;
  background-color: #f4f6f8;
}
.container{

  display: flex;
  justify-content:center;
  align-items:center;
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #f5f7f9;
}
.section{
  height:108rpx;
  width: 100%;
  background: #ffffff;
  position: fixed;
  top: 0;
  left: 0;
}

.nav {
  height:108rpx;
  width: 550rpx;
  position: fixed;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 108rpx;
  background: #ffffff;
  font-size: 16px;
  white-space: nowrap;
  top: 0;
  left: 100rpx;
  right: 100rpx;
  z-index: 99;
  margin-bottom: 32rpx;
}
.nav-all{
  height:30rpx;
  width: 30rpx;
  position: absolute;
  z-index: 999;
  right: 0rpx;
  top: 0;
  background-color: #fff;
  transform: scale(.18);
  margin-right: 80rpx;
}
.nav-me{
  height:30rpx;
  width: 30rpx;
  left: 0;
  margin-top: 10rpx;
  background-color: #fff;
  position: absolute;
  transform: scale(.15);
  z-index: 999;
}
.nav-item {
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: inline-block;
  text-align: center;
}
.nav-item.active{
  color: #fc975c;
}

.container .didi-time{
  position: absolute;
  width: 100%;
  height: 92rpx;
  left: 40rpx;
  top: 45rpx;
  font-size: 30rpx;
  color: rgba(0, 0, 0, .7)
}
 .didi-input-str{
  position: absolute;
  top: 100rpx;
  left: 105rpx;
  border-bottom: 1px solid #f5f5f5;
  height: 120rpx;
  width: 100%;
  line-height: 120rpx;  
 
}
.circle-str{
  position: absolute;
  height: 10px;
  width: 10px;
  border-radius: 50%;
  background: #3cbca3;
  left: 40rpx;
  top: 150rpx;
}
.didi-input-end{
  position: absolute;
  height: 120rpx;
  width: 100%;
  margin-top: -300rpx;
  line-height: 120rpx;
  left: 105rpx;
}

.circle-end{
  
  position: absolute;
  height: 10px;
  width: 10px;
  border-radius: 50%;
  background: #fc9153;
  left: 40rpx;
  top: 250rpx;
}
.content{
  vertical-align:middle;
  display:inline-block;
  margin-top: -250px;
}
.content .didi-btn{
  display: flex;
  justify-content:center;
  align-items:center;
  position: absolute;
  width: 500rpx;
  height: 500rpx;
  left: 50%;
  margin-left: -250rpx;
  border-radius: 100%;
  background-color: #4a4c5b;
  font-size: 65rpx;
  color: #fff;
}
